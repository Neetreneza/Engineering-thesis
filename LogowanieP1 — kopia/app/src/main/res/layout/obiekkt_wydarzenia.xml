<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="3dp"
    android:background="@color/cardview_dark_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="#4C4B4B"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:padding="2dp" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TESTOWANKO"
            android:textColor="@color/eye_background"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TESTOWANKO2"
            android:textColor="@color/eye_background"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/textView1"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/startTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginStart="146dp"
            android:layout_marginTop="-9dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Start: 12:00"
            android:textColor="@color/eye_background"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/koniecTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginStart="146dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@id/imageView"
            android:text="Koniec: 13:00"
            android:textColor="@color/eye_background"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/miejsceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginStart="146dp"
            android:layout_toEndOf="@id/imageView"
            android:text="TextView"
            android:textColor="@color/eye_background"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>